{
  "name": "assets",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-js": "tsc --noEmit && esbuild --bundle src/index.tsx --outfile=dist/js/app.js --sourcemap --minify",
    "watch-js": "tsc --noEmit && esbuild --bundle src/index.tsx --outfile=../priv/static/js/app.js --sourcemap --watch",
    "build-css": "cross-env ENV_BUILD=prod postcss src/index.css -o dist/css/app.css",
    "watch-css": "tailwindcss --input=src/index.css --output=../priv/static/css/app.css --postcss --watch",
    "watch": "concurrently \"npm:watch-js\" \"npm:watch-css\"",
    "build": "concurrently \"npm:build-js\" \"npm:build-css\""
  },
  "author": "Alex Manning",
  "license": "ISC",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.16",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.3.3",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.12.18",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^2.2.8",
    "typescript": "^4.3.5"
  }
}
